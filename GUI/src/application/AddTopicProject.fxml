   <children>
      <AnchorPane layoutX="-14.0" layoutY="-18.0" prefHeight="300.0" prefWidth="416.0">
         <children>
            <TextField fx:id="courseWorkshopIdField" layoutX="14.0" layoutY="17.0" prefHeight="26.0" prefWidth="401.0" />
